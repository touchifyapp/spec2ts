{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "firstName": {
            "type": "string"
        },
        "lastName": {
            "type": "string"
        },
        "age": {
            "description": "Age in years",
            "type": "integer",
            "minimum": 0
        },
        "hairColor": {
            "enum": [
                "black",
                "brown",
                "blue"
            ],
            "type": "string"
        }
    },
    "required": [
        "firstName",
        "lastName"
    ]
}